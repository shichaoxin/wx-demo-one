.picker-container {
  padding: 10rpx;
}

.word {
  margin-left: 40rpx;
}

.line {
  width: 100%;
  height: 5rpx;
  background-color: #ddd;
  margin-top: 10rpx;
}

.footer {
  width: 100%;
  height: 120rpx;
  background: #f2784b;
  position: fixed;
  bottom: 0;
}

.footer_fun {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.showModel {
  background: #ddd;
  opacity: 0.5;
  transition: 0.5s;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
  transition: 0.5s;
}

/*对话框 */

.commodity_attr_box {
  height: 800rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  transition: 0.5s;
}

/*选择电影左滑动画*/

.outDialog {
  width: 300rpx;
  height: 100rpx;
  background: #ddd;
  position: fixed;
  right: 0px;
  z-index: 99999;
}

.chooseTime {
  width: 98%;
  padding: 5px;
  margin: auto;
}

.addColor {
  background: #f2784b;
  color: #fff;
}

.movices_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
