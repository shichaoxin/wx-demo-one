.center {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx;
  background-color: #f2784b;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.container_view {
  width: 100%;
  height: 100%;
  margin-top: 30rpx;
}
.container_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ddd;
  color: #fff;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.tab {
  margin-left: 20rpx;
}
.row {
  margin-right: 20rpx;
}