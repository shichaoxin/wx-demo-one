/* pages/movies/movies.wxss */

.movice_img {
  width: 100%;
  height: 400rpx;
}

.movices_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  top: 5rpx;
  margin: auto;
  width: 99%;
  font-size: 30rpx;
}

.movies_des {
  width: 99%;
  margin: 10rpx auto;
  border: 1rpx solid #ddd;
  height: 145rpx;
  padding: 10rpx;
  position: relative;
  transition: 0.1s linear;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
}

.xia_san_jiao {
  width: 0;
  height: 0;
  border-right: 20rpx solid transparent;
  border-left: 20rpx solid transparent;
  border-top: 20rpx solid #f2784b;
  position: absolute;
  bottom: 0;
  left: 45%;
}

.shang_san_jiao {
  width: 0;
  height: 0;
  border-right: 20rpx solid transparent;
  border-left: 20rpx solid transparent;
  border-bottom: 20rpx solid #f2784b;
  position: absolute;
  bottom: 0;
  left: 45%;
}

.increaseHeight {
  width: 99%;
  margin: 10rpx auto;
  border: 1px solid #ddd;
  height: 300rpx;
  padding: 10rpx;
  font-size: 30rpx;
  position: relative;
  transition: 0.5s linear;
}

.scroller_container {
  width: 99%;
  margin: auto;
  border: 1rpx solid red;
  overflow-x: auto;
  white-space: nowrap; 
}
.actor {
  padding: 10rpx;
  position: relative;
  top: 40rpx;
}
.container_bottom {
  width: 100%;
  background-color: #f2784b;
  position: absolute;
  bottom: 0;
}
.fun_footer {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 120rpx;
}
